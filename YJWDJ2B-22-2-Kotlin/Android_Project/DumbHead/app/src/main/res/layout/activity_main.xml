<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127" />

    <TextView
        android:id="@+id/drawcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 무"
        app:layout_constraintEnd_toStartOf="@+id/losecount"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/wincount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="0 승"
        app:layout_constraintEnd_toStartOf="@+id/drawcount"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/losecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 패"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="171dp" />

    <Button
        android:id="@+id/scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가위"
        app:layout_constraintBottom_toTopOf="@+id/rock"
        tools:layout_editor_absoluteX="158dp" />

    <Button
        android:id="@+id/rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="바위"
        app:layout_constraintBottom_toTopOf="@+id/paper"
        tools:layout_editor_absoluteX="158dp" />

    <Button
        android:id="@+id/paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="433dp" />

    <Button
        android:id="@+id/clearbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초기화"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="583dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="217dp" />

</androidx.constraintlayout.widget.ConstraintLayout>